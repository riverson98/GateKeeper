model Resident {
  id        String   @id @default(uuid())
  name      String
  phone     String
  
  unitNumber     String
  unitComplement String
  
  deliveryCodes DeliveryCode[]

  deletedAt DateTime?
  createdAt DateTime
  updatedAt DateTime  @updatedAt

  @@map("residents")
}

model DeliveryCode {
  id         String @id @default(uuid())
  code       String
  provider   String
  
  residentId String
  resident   Resident @relation(fields: [residentId], references: [id])

  @@map("delivery_codes")
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}